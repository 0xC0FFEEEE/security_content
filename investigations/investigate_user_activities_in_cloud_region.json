  "investigate": {
    "splunk": {
      "fields_required": [
        "region",
        "src_user"
      ],
      "macros": [
        "investigate_user_activities_in_cloud_region_output_filter"
      ],
      "schedule": {
        "cron_schedule": "0 * * * *",
        "earliest_time": "-70m@m",
        "latest_time": "-10m@m"
      },
      "search": "| from datamodel:Cloud_Draft_v4.Cloud_Compute | search region={region} user={src_user} `investigate_user_activities_in_cloud_region_output_filter`"
    }
